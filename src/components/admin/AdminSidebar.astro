// Obtener la ruta actual para resaltar el enlace activo
const { pathname } = Astro.url;
---

<aside
  class="w-64 bg-gray-800 text-white h-full overflow-y-auto hidden md:block"
>
  <div class="p-4 border-b border-gray-700">
    <a href="/admin/dashboard" class="flex items-center space-x-2">
      <img src="/favicon.ico" alt="Logo JAMUCHEE" width="32" height="32" />
