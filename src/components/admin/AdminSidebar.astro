---
// Links para la navegación del administrador
const adminLinks = [
  {
    name: "Dashboard",
    href: "/admin/dashboard",
    icon: "chart-bar",
  },
  {
    name: "Productos",
    href: "/admin/productos",
    icon: "shopping-bag",
  },
  {
    name: "Especies",
    href: "/admin/especies",
    icon: "flower",
  },
  {
    name: "Pedidos",
    href: "/admin/pedidos",
    icon: "shopping-cart",
  },
  {
    name: "Usuarios",
    href: "/admin/usuarios",
    icon: "users",
  },
  {
    name: "Configuración",
    href: "/admin/configuracion",
    icon: "cog",
