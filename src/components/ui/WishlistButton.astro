---
// Componente para mostrar el botón de lista de deseos con contador
---

<a
  href="/lista-deseos"
  class="p-2 text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors relative"
  aria-label="Ver lista de deseos"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="wishlist-icon"
  >
    <path
      d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"
    ></path>
  </svg>
  <span
    id="wishlist-count"
    class="absolute top-0 right-0 bg-primary-600 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center transform translate-x-1/2 -translate-y-1/2"
  >
    0
  </span>
</a>

<script>
  import { wishlistCount } from "../../stores/wishlistStore";

  document.addEventListener("DOMContentLoaded", () => {
    const wishlistCountElement = document.getElementById("wishlist-count");

    if (wishlistCountElement) {
      // Inicializar con el valor actual
      wishlistCountElement.textContent = wishlistCount.get().toString();

      // Suscribirse a cambios
      wishlistCount.subscribe((count) => {
        wishlistCountElement.textContent = count.toString();

        // Mostrar u ocultar el contador según si hay elementos
        if (count > 0) {
          wishlistCountElement.classList.remove("hidden");
        } else {
          wishlistCountElement.classList.add("hidden");
        }
      });
    }
  });
</script>

